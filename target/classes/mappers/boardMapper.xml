<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.acorn.boardMapper">


<sql id="search">
	<if test="search != null">
			<if test="search == ''">
			</if>
			<if test="searchtype == 'title'">
			and title like '%'||#{search}||'%'
			</if>
			<if test="searchtype == 'content'">
			and content like '%'||#{search}||'%'
			</if>
			<if test="searchtype == 'writer'">
			and writer_id like '%'||#{search}||'%'
			</if>
		</if>


</sql>



	<select id="getboardcount" resultType="int">
		select count(*) from board where id > 0 
		
		<include refid="search"></include>
	</select>

	<select id="getboardlist" resultType="boardDTO">

		select id,title,writer_id,content,filepath,category,
		written_date,readcnt
		from (select
		id,title,writer_id,content,filepath,category,written_date,
		readcnt,
		row_number()over(order by id desc) as rank from board) 
		where rank
		between #{start} and #{end}
		<include refid="search"></include>

	</select>


</mapper>